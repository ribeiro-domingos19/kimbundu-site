<% layout = "layout" %>
<div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #ddd; margin-bottom: 20px;">
        <h2>Gerenciamento de Feedback</h2>
        <p>Logado como: <b><%= user.username %></b> (<a href="/auth/logout">Sair</a>)</p>
    </div>

    <p><a href="/admin">‚Üê Voltar ao Painel Principal</a></p>

    <% if (comments && comments.length > 0) { %>
        <% comments.forEach(comment => { %>
            <div style="border: 1px solid #ccc; padding: 15px; margin-bottom: 25px; border-radius: 8px; background: #fff;">
                
                <p style="font-size: 14px; color: #555;">
		    <strong>D√∫vida em Aula:</strong> <a href="/admin/lessons/<%= comment.lessonId %>" target="_blank" style="font-weight: bold; color: #00838f;">[ID <%= comment.lessonId %>] Visualizar Aula</a> | 
                    <em>Por:</em> <%= comment.username %> em <%= new Date(comment.timestamp).toLocaleString() %>
                </p>
                
                <blockquote style="margin: 15px 0 15px 15px; padding-left: 10px; border-left: 3px solid #ffcc80; font-style: italic;">
                    <%= comment.message %>
                </blockquote>

                <% if (!comment.adminResponse) { %>
                    <form action="/admin/feedback/reply/<%= comment.id %>" method="POST">
                        <h4 style="margin-bottom: 5px;">Sua Resposta:</h4>
                        <textarea name="adminResponse" rows="3" style="width: 100%; border: 1px solid #ddd; padding: 8px;" required></textarea>
                        <button type="submit" style="background-color: #00bcd4; color: white; border: none; padding: 8px 15px; border-radius: 4px; cursor: pointer; margin-top: 10px;">
                            Enviar Resposta
                        </button>
                    </form>
                <% } %>
            </div>
        <% }) %>
    <% } else { %>
        <div style="padding: 20px; background: #f0fff0; border: 1px solid #d0e0d0; border-radius: 4px;">
            <p>üéâ N√£o h√° coment√°rios pendentes de resposta!</p>
        </div>
    <% } %>
</div>
